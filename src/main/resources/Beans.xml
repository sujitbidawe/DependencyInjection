<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "someName" class = "com.bl.di.Student">
        <constructor-arg name="studentId" value="1" type="int"/>
        <constructor-arg name="studentName" value="sujit" type="java.lang.String"/>
    </bean>

    <bean id = "otherName" class = "com.bl.di.Student">
        <constructor-arg name="studentId" value="2" type="int"/>
    </bean>

</beans>